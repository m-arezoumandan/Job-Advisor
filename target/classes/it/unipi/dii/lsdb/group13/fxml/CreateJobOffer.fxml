<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<?import javafx.collections.FXCollections?>
<VBox alignment="CENTER_LEFT" spacing="10.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="it.unipi.dii.lsdb.group13.guiController.CreateJobOffer" prefHeight="400.0" prefWidth="600.0">
    <children>
        <TextField fx:id="usernameField" promptText="Insert the job type" />
        <TextField fx:id="cityField" promptText="Insert the job city" />
        <TextField fx:id="stateField" promptText="Insert the job state(e.g TX for Texas)" />
        <ChoiceBox fx:id="salaryUnit" value="Choose the time unit for salary">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Year" />
                    <String fx:value="Hour" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <TextField fx:id="salaryFromField" promptText="Insert the minimum for salary" />
        <TextField fx:id="salaryToField" promptText="Insert the maximum for salary" />
        <ChoiceBox fx:id="jobType" value="Choose the Job Type">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="Full-Time" />
                    <String fx:value="Part-Time" />
                    <String fx:value="Full-Time/Part-Time" />
                    <String fx:value="Contractor" />
                    <String fx:value="Seasonal/Temp" />
                </FXCollections>
            </items>
        </ChoiceBox>
        <TextArea fx:id="descriptionField" promptText="Insert job Description" />
        <Button text="Submit" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
