<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="it.unipi.dii.lsdb.group13.guiController.EmployerViewFollowersController"
          prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css"
          alignment="CENTER" hgap="8" vgap="8"
>
    <Label text="These are your followers!" GridPane.rowIndex="1" GridPane.columnIndex="2" GridPane.columnSpan="3"/>
    <TableView fx:id="tableFollowers"  GridPane.rowIndex="4" GridPane.columnIndex="2" onMouseClicked="#rowsSelected">
        <columns>
            <TableColumn fx:id="nameCol" text="Username" prefWidth="250"/>
        </columns>
    </TableView>

    <padding>
        <Insets bottom="15" left="25" right="25" top="15"/>
    </padding>
</GridPane>
