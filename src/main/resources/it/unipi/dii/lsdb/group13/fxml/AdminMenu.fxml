<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unipi.dii.lsdb.group13.guiController.AdminMenuController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css"
            fx:id="menuAdmin"
>
    <top>
        <MenuBar id="menuBar" fx:id="menuBar" layoutY="-3.0" prefHeight="26.0">
            <menus>
                <Menu text="Homepage" onShowing="#pressHomePage" onHiding="#pressHomePage">
                    <items>
                        <MenuItem text="HomePage"/>
                    </items>
                </Menu>
                <Menu text="Exit">
                    <items>
                        <MenuItem text="Exit" onAction="#pressExit"/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
</BorderPane>
