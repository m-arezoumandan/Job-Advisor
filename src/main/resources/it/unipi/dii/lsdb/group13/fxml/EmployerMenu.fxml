<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="it.unipi.dii.lsdb.group13.guiController.EmployerMenuController"
            prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/style.css"
            fx:id="menuEmployer"
>
    <top>
        <MenuBar id="menuBar" fx:id="menuBar" layoutY="-3.0" prefHeight="26.0">
            <Menu text = "Menu">
                <items>
                    <MenuItem text = "HomePage" onAction="#pressHomePage"/>
                    <MenuItem text="View followers"/>
                    <MenuItem text="Publish new job offer" onAction="#pressPublishNewJob"/>
                </items>
            </Menu>
            <Menu text = "Account">
                <items>
                    <MenuItem onAction="#pressViewAccount" text="View your account" />
                    <MenuItem onAction="#pressUpdateAccount" text="Update your account" />
                    <SeparatorMenuItem />
                    <MenuItem onAction="#pressExit" text="Exit" />
                </items>
            </Menu>
        </MenuBar>
    </top>
</BorderPane>
